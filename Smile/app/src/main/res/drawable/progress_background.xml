<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#4a9dc9" />
            <gradient android:angle="-90" android:startColor="#4a9dc9" android:endColor="#4a9dc9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#4a9dc9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dip" />
            <stroke android:width="1dip" android:color="#d0d7e2" />
            <gradient android:angle="-90" android:startColor="#d0d7e2" android:endColor="#d0d7e2" />
        </shape>
    </item>
</selector>
