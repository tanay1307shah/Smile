<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_2">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Risk"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/risk_background"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/progress_background" />

            <ImageView
                android:id="@+id/risk_high"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/high" />

            <ImageView
                android:id="@+id/risk_medium"
                android:layout_width="265dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/risk_background"
                app:srcCompat="@drawable/medium" />

            <ImageView
                android:id="@+id/risk_low"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/risk_background"
                app:srcCompat="@drawable/call_btn" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Helpline"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="1 (800) 273 - 8255"
                android:textAlignment="center"
                android:textColor="#009900"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/callBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:background="@drawable/call_btn"
                android:fontFamily="casual"
                android:text="Call"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView

                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/risk_background"
                android:layout_marginTop="14dp"
                android:fontFamily="casual"
                android:text="Comments"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cmts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="TextView"
                android:textStyle="bold" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>