<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itp341.shah.tanay.smile.MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="SMILE"
        android:textColor="#c1bf2c"
        android:textSize="80sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_design"
        android:fontFamily="casual"
        android:text="Take the test?"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/badBtn"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bad_btn"
        android:fontFamily="casual"
        android:text="feeling bad?"
        android:textColor="#ffffff"
        android:textSize="12pt"
        android:textStyle="bold" />



        <Button
            android:id="@+id/funBtn"
            android:layout_width="170dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/joinBtn"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="Have Fun"
            android:layout_marginBottom="80dp"
            android:textColor="#ffffff"
            android:textSize="12pt"
            android:textStyle="bold" />


</LinearLayout>
