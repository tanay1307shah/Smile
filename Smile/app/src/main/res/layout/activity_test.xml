<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  Hey how are you feeling?  "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ans_design"
            android:fontFamily="casual"
            android:inputType="text" />

        <TextView
            android:id="@+id/q2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  So, Whats going on in your
   Life ? "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ans_design"
            android:fontFamily="casual"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/q3"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  In past few weeks, have you wished
    you were dead ?  "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ans_design"
            android:entries="@array/yesNo"
            android:popupBackground="@drawable/ans_design" />

        <TextView
            android:id="@+id/q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  Do you think that your family is better
    without you? "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ans_design"
            android:entries="@array/yesNo"
            android:popupBackground="@drawable/ans_design" />

        <TextView
            android:id="@+id/q5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  Have you been thinking to end you life ? "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ans_design"
            android:entries="@array/yesNo"
            android:popupBackground="@drawable/ans_design" />

        <TextView
            android:id="@+id/q6"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  If yes, do you want to die Today or
   very soon ?  "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ans_design"
            android:fontFamily="casual"
            android:inputType="textMultiLine" />


        <TextView
            android:id="@+id/q7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="   If you plan to die,
   How would you do it and why ?  "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ans_design"
            android:fontFamily="casual"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/q8"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  Do you have access to everything
  to complete your plan ? "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ans_design"
            android:fontFamily="casual"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/q9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="  Do you intend to end you life soon ? "
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/a9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/ans_design"
            android:entries="@array/intend"
            android:popupBackground="@drawable/ans_design" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_design"
            android:fontFamily="casual"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>